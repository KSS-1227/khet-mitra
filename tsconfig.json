{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "types": ["vite/client"],
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": false
  },
  "include": [
    "src",
    "vite.config.ts",
    "vite.config.js",
    "postcss.config.js",
    "tailwind.config.ts",
    "tailwind.config.js"
  ]
}
